<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @post.title %></h1>
      <p><%= @post.content %></p>
      <% if user_signed_in? && current_user == @post.user %>
            <%= link_to "Editar", edit_post_path(@post) %>
            <%= link_to "Eliminar", @post, method: :delete, data: { confirm: "¿Estás seguro de eliminar este post?" } %> 
      <% end %>
    </div>
  </div>
</div>